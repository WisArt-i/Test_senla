#include <iostream>
#include <string.h>
using namespace std;
int main()
{
setlocale(LC_ALL, "Russian");
char s[],f[],ctr = 0;
cout << ("Введите предложение:") << endl;
cin.get(s);
cout << ("Введите слово для поиска:") << endl;
cin.get(f);
char *buf = strtok(s, " ,.");
while (buf != NULL) {
if (strcmp(buf, f) == 0) { ctr++}; 
buf = strtok (NULL, " ,.");
}
cout << ("/n Слово употребляется ") << ctr << (" раз");
 cin.get(); cin.get();
  return 0;
}
