#include <iostream>
using namespace std;
// Наибольший общий делитель
int NOD(int n1, int n2)
{
  int div;
  if (n1 == n2)  return n1;
  int d = n1 - n2;
  if (d < 0) {
    d = -d;  div = NOD(n1, d);
  } else
    div = NOD(n2, d); 
  return div;
}
// Наименьшее общее кратное
int NOK(int n1, int n2) 
{ 
  return n1*n2 / NOD(n1, n2); 
}
int main() 
{
setlocale(LC_ALL, "Russian");

  int n1, n2;
  cout << ("\nПрограмма вычисляет и выводит на экран НОК и НОД двух целых чисел");
  cout << ("\n Введите первое целое число:");
  cin >> n1;
  cout << ("\nВведите второе целое число:");
  cin >> n2;
  if (n1 % 1 != 0, n2 % 1 !=0) {
  cout << ("\nОшибка! Введены не целые числа");
  } else {
  cout << ("\nНОК: ") << NOK(n1, n2);
  cout << ("\nНОД: ") << NOD(n1, n2);
  }
  return 0;
  system("pause");
}
