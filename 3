#include <iostream>
#include <ctype.h>
using namespace std;
int main()
{
setlocale(LC_ALL, "Russian");
char s[],f[];
int slovo, count = 0, buf;
cout << ("/nВведите предложение:") << endl;
cin.get(s);
  int i = 0, j;
  while (s[i] == ' ' && s[i] != '\0')
    i++;
  slovo = 0;
  while (s[i] != '\0') {
    if (s[i] != ' ' && slovo == 0)
    {
      slovo = 1;
      f[count++] = i;
    }
    else if (s[i] == ' ')
      slovo = 0;
    i++;
  }
  cout << ("/nКоличество слов в строке ") << count;
  for (j = 0; j < count-1; j++) {
    for (i = j+1; i < count-1; i++) {
    int a=i,b=j;
      while (s[f[a]] == s[f[b]] && s[f[b]] != '\0') {
      a++;
      b++;
      }
    if (s[f[a]] > s[f[b]]){
        buf = f[i];
        f[i] = f[j];
        f[j] = buf;
  }}}
 for (i = 0; f[i] != '\0'; i++) {
    for (j = 0; s[f[i]+j] != '\0', s[f[i]+j] != ' '; j++) {
      cout << s[f[i]+j]
    }
    cout << endl;
 }
for (i = 0; f[i] != '\0'; i++) {
    s[f[i]] = toupper(s[f[i]]);
}
 cin.get(); cin.get();
  return 0;
}
